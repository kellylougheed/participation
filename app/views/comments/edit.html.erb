<br/>
<div class="content">

<%= link_to student_path(@current_student) do %>
  <i class="fa fa-arrow-left" aria-hidden="true"></i>
  Back to <%= @current_student.first_name %>
<% end %>
<br/><br/>

<h1 class="text-center">Edit Comment</h1>
<br/>

<%= simple_form_for @comment, url: student_comment_path(current_student, @comment) do |f| %>
    <%= f.input :friendly_date, label: 'Date' %><br/>
    <%= f.input :message %>
    <br/><br/>
    <%= f.submit 'Update', class: 'btn' %>
  <% end %>

</div>
